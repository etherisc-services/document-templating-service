# Document Template Processing Service Configuration

# Gotenberg PDF conversion service URL
GOTENBERG_API_URL=http://localhost:3000

# Jinja2 undefined variable behavior: "debug", "silent", "strict"
UNDEFINED_BEHAVIOR=debug

# Development settings
ENVIRONMENT=development
DEBUG=true

# Logging level
LOG_LEVEL=INFO

# File upload limits
MAX_FILE_SIZE_MB=50
MAX_LINTING_FILE_SIZE_MB=10

# Template processing settings
DEFAULT_LINTER_ENABLED=true
STRICT_LINTING_BY_DEFAULT=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS settings (for development)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]